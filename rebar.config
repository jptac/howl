{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "../../doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  {proper, ".*", {git, "https://github.com/manopapad/proper.git", {tag, "v1.1"}}},
  {lager, "2.0.*",{git, "https://github.com/basho/lager.git", {tag,"2.0.3"}}},
  {cuttlefish, ".*", {git, "https://github.com/basho/cuttlefish.git", {branch, develop}}},
  {webmachine, ".*", {git, "https://github.com/basho/webmachine.git", {tag, "1.10.3"}}},
  {riak_core, ".*", {git, "https://github.com/project-fifo/riak_core.git", {branch, "fifo"}}},
  {riak_ensemble, ".*", {git, "https://github.com/basho/riak_ensemble.git", {branch, "develop"}}},
  {mdns_server_lib, ".*", {git, "https://github.com/Licenser/mdns_server_lib.git", {branch, master}}},
  {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "0.9.0"}}},
  {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", {tag, "v1.4.3"}}},
  {msgpack, ".*", {git, "https://github.com/project-fifo/msgpack-erlang.git", {tag, "0.2.3-dialyzer"}}},
  {jsxd, ".*", {git, "https://github.com/Licenser/jsxd.git", {branch, master}}},
  {fifo_spec, ".*", {git, "https://github.com/project-fifo/fifo_spec.git", {branch, test}}},
  {libsnarl, ".*", {git, "https://github.com/project-fifo/libsnarl.git", {branch, test}}},
  {lager_watchdog, ".*", {git, "https://github.com/project-fifo/lager_watchdog.git", {branch, "master"}}},
  {folsom_ddb, ".*", {git, "https://github.com/dalmatinerdb/folsom_ddb.git", {branch, master}}}
 ]}.

{plugin_dir, "deps/cuttlefish/src"}.
{plugins, [cuttlefish_rebar_plugin]}.
